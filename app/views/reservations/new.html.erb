<% if !@reservations %>
<div class="row">
  <div class="col-4">
    <h3 class="p-2">Pick a Cruisey</h3>

    <div class='border border-primary rounded p-2 m-2'>
      <%= form_with(url: add_city_cruise_path(@reservations), local: true, method: :get) do |form| %>
        <div class="form-group">
          <%= form.label :city_id %>
          <%= form.collection_select(:cruise_id, @cruises, :id, :name, {}, {class: 'form-control'}) %>
        </div>

        <div class="form-group">
          <%= form.submit 'Go', class: 'btn btn-outline-success' %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<% else %>
<% end %>

